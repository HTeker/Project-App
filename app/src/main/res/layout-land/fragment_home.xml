<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weatheradviceapp.fragments.HomeFragment">

    <TextView
        android:id="@+id/txtToday"
        android:layout_width="51dp"
        android:layout_height="22dp"
        android:text="@string/main_today"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp" />

    <RelativeLayout
        android:id="@+id/weatherToday"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtToday"
        android:layout_marginLeft="8dp">

    </RelativeLayout>

    <TextView
        android:id="@+id/txtPlanning"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="8dp"
        android:text="@string/main_planning"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/weatherPlanning1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPlanning"
        android:layout_marginLeft="310dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/advice1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:onClick="toggleAdviceDetail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/advice3"
        app:layout_constraintTop_toBottomOf="@+id/weatherToday">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/advice2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:onClick="toggleAdviceDetail"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/advice1">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/advice3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:onClick="toggleAdviceDetail"
        app:layout_constraintHorizontal_bias="0.289"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/advice2">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/advice4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:onClick="toggleAdviceDetail"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/advice3">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/weatherPlanning2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/weatherPlanning1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/weatherPlanning1"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/weatherPlanning1">

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
